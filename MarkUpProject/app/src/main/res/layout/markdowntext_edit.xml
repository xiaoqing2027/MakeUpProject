<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:id="@+id/HeaderBtn"
            android:textColor="@color/abc_background_cache_hint_selector_material_light"
            android:background="@color/colorPrimary"
            android:text="H" />

        <Button
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:id="@+id/BoldBtn"
            android:background="@color/colorPrimary"
            android:text="B"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/abc_background_cache_hint_selector_material_light" />

        <Button
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:text="Q"
            android:id="@+id/quotebtn"
            android:background="@color/colorPrimary"
            android:layout_marginRight="5dp"
            android:textColor="@color/abc_background_cache_hint_selector_material_light" />

        <Button
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:id="@+id/listbtn"
            android:background="@color/colorPrimary"
            android:text="L"
            android:textColor="@color/abc_background_cache_hint_selector_material_light" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:text="MarkDown Text:"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />


    <EditText
        android:layout_width="500dp"
        android:layout_height="330dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText"
        android:background="@color/ripple_material_light"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scrollIndicators="bottom|top" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/preview"
        android:layout_below="@+id/editText"
        android:paddingTop="10dp"
        android:textColor="@color/abc_background_cache_hint_selector_material_light"
        android:background="@color/colorPrimary"
        android:text="preview"/>

    <!--
    <Button
